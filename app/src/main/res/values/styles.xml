<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_gradient_button</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BaseToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/colorRipple</item>
        <item name="android:elevation">8dp</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="BaseToolbar.Back">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Regular">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorMediumDark</item>
    </style>

    <style name="Regular.12">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Regular.14">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Regular.16">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="Regular.18">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="Bold">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Bold.10">
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

    <style name="Bold.14">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Bold.22">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>
</resources>